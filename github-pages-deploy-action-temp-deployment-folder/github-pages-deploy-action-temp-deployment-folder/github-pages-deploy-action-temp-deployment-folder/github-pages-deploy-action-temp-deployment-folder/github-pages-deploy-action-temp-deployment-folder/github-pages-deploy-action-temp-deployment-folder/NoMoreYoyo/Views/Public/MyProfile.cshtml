@model NoMoreYoyo.Models.MyProfileViewModel;

<div class="card">
    <div class="card-body">
        <h1>My Profile</h1>
        <div class="row">
            <div class="col-4">
                @Html.LabelFor(model => model.UserName, new { @class = "form-check-label text-uppercase" })
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @disabled = "disabled" })
                <br />
                @Html.LabelFor(model => model.EmailAddress, new { @class = "form-check-label text-uppercase" })
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
    </div>
</div>